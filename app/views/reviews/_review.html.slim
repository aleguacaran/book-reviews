div.review id=dom_id(review)
  .review-header
    strong = review.user.name
    span.rating
      - review.rating.times do
        | ‚≠ê
      | (#{review.rating}/5)
    span.review-date = review.created_at.strftime('%d/%m/%Y')
  .review-content
    p = simple_format(review.comment)
  .review-actions
    = link_to "Edit", edit_book_review_path(review.book, review), class: "btn btn-sm btn-secondary"
    = button_to "Delete", book_review_path(review.book, review), method: :delete, class: "btn btn-sm btn-danger", data: { confirm: "Are you sure?" }, form: { style: "display: inline;" }
